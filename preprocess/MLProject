  image: yosshi999/virtual-background:0.0.1
  volumes: [
    "$(pwd)/../mlruns:/tmp/mlruns",
    "$(pwd)/data:/opt/data",
    "$(pwd)/../config:/mlflow/projects/code/config",
    "$(pwd)/../fiftyone:/root/fiftyone"
  ]

entry_points:
  preprocess:
    parameters:
      config: {type: string, default: /mlflow/projects/code/config/preprocess/coco2014.yaml}
      downstream: {type: string, default: /opt/data/preprocess}
    command: python -m src.preprocess --config {config} --downstream {downstream}
